{
  "compilerOptions": {
    "outDir": "./dist",
    "allowJs": true,
    "target": "es6",
    "module": "esnext",
    "lib": ["dom", "es2015", "es2015.promise", "esnext"],
    "jsx": "react",
    "sourceMap": true,
    "strict": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"],
      "@checkin/*": ["./src/sites/checkin/*"],
      "@obd/*": ["./src/sites/onboarding/*"]
    },
    "esModuleInterop": true,
    "noImplicitAny": true,
    "noImplicitThis": true,
    "strictNullChecks": true,
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "node"
  },
  "include": ["./src/**/*"],
  "types": ["react"]
}
